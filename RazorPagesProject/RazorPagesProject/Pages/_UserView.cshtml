@page 
@model RazorPagesProject.Pages._UserViewModel
@{
}

<div class="portlet-title sticky" bis_skin_checked="1">
    <div class="caption" bis_skin_checked="1">
        @Model.currentUser.Firstname @Model.currentUser.Lastname
        (@Model.currentUser.Role)
    </div>
</div>
<div>
    <div class="tab-content no-space" bis_skin_checked="1">

        <div class="profile-content" bis_skin_checked="1">

            <div class="form-group" bis_skin_checked="1">
                <label class="label-info">First name:</label>
                <div class="value-info" bis_skin_checked="1"><p class="form-control-static">@Model.currentUser.Firstname</p></div>
            </div>

            <div class="form-group" bis_skin_checked="1">
                <label class="label-info">Last name:</label>
                <div class="value-info" bis_skin_checked="1"><p class="form-control-static">@Model.currentUser.Lastname</p></div>
            </div>

            <div class="form-group" bis_skin_checked="1">
                <label class="label-info">Phone:</label>
                <div class="value-info" bis_skin_checked="1"><p>@Model.currentUser.PhoneNumber</p></div>
            </div>

            <div class="form-group" bis_skin_checked="1">
                <label class="label-info">Email:</label>
                <div class="value-info" bis_skin_checked="1"><p>@Model.currentUser.Email</p></div>
            </div>

            <div class="form-group" bis_skin_checked="1">
                <label class="label-info">Class:</label>
                <div class="value-info" bis_skin_checked="1"><p>@Model.currentUser.Class</p></div>
            </div>
        </div>
    </div>
    <div class="image-div">
        <div class="user-picture">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/2048px-No_image_available.svg.png"
                 alt="No Photo available" width="700" height="700">
        </div>
    </div>
</div>

